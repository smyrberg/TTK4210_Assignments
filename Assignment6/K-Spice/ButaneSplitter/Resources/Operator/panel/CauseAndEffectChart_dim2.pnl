Header	Title = "%TAG_NAME (%PANEL_TIMELINE) Alias Table"; Resizable = SaveSize,LargerOnly; Help = "#(%TAG_NAME@B_type)"; \
		Name = "%TAG_NAME Alias Table"; OneOff = "%TAG_NAME (%PANEL_TIMELINE)"; Position = Cursor;	
	
