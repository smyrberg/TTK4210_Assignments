Stub		Frame = 11; Size = 2,0;

Variable	Frame = 11; Tag = "%TAG_NAME@B_desc"; Width = 200; Background = White;

Frame	Frame = 1; Id=101; Layout = Horizontal; Space = 3; 
Label	Frame=101; Label="#(%TAG_NAME@B_dimdsc[2])"; SameWidth = 10;
